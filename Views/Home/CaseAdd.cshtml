@model Case

<head>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PeopleForPeople.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    
</head>
<header class="HEADER">
        <nav class="nav-head">
            <div class="container-fluid HEADER display-flex ">
                <a class="navbar-brand pfp vertical-align-bottom" asp-area="" asp-controller="Home" asp-action="HomePage">PFP</a>
                <div class="display-flex vertical-align-middle">
                    <a href="/Case/Add" class="navbar-brand pfp vertical-align-middle" id="createcase">Report a Case</a>
                    <a href="/Chats" class="navbar-brand pfp "  id="inbox">
                        <i class="fa fa-inbox" ></i>
                    </a>
                    <a href="/Logout" class="navbar-brand pfp "  id="logout">
                        <span class="glyphicon glyphicon-log-out" id="logout" ></span>
                    </a>
                </div>
                @* <a class="navbar-brand pfp" asp-area="" asp-controller="Home" asp-action="HomePage">PFP</a> *@
                
            </div>
        </nav>
</header>
<div class="BigDiv">
    <div class="container2 caseadd">
        <form action="/Case/Add" method="post" enctype="multipart/form-data">
            <label class="display-5 text-left">Report a Case!</label>
            <br>
            <br>
            <div class="row mb-4">
                <div class="col-10">
                    <div class="form-outline">
                        <label class="form-label"  asp-for="Tittle" >Problem/Case Tittle: </label>
                        <input  class="form-control" asp-for="Tittle" placeholder="Write the tittle..." name="Tittle" />
                        <span asp-validation-for="Tittle"></span>
                    </div>
                </div>
            </div>
            <div class="row mb-4">
                <div class="col-10">
                    <div class="form-outline">
                        <label class="form-label" asp-for="Description">Problem/Case Description: </label>
                        <textarea class="form-label" asp-for="Description" name="Description" cols="37" rows="4" placeholder="Write the description..."></textarea>
                        <span asp-validation-for="Description" ></span>
                    </div>
                </div>
            </div>
             <div class="row mb-4">
                <div class="col-10">
                    <div class="form-outline">
                        <label class="form-label"  asp-for="FamilySurname" >Family Surname: </label>
                        <input  class="form-control" asp-for="FamilySurname" placeholder="Write family's surname..." name="FamilySurname" />
                        <span asp-validation-for="FamilySurname"></span>
                    </div>
                </div>
            </div>
            <div class="row mb-4">
            <div class="col-10">
                <div class="form-outline">
                    <label class="form-label" asp-for="City" >City: </label>
                    <select name="City" asp-for="City">
