                        <option>Finiq</option>
                        <option>Ulëz</option>
                        <option>Kurbnesh</option>
                    </select>
                    </div>
                </div>
            </div>
            <div class="row mb-4">
                <div class="col-11">
                    <div class="form-outline">
                        <label class="form-label"  asp-for="Address" >Address: </label>
                        <input  class="form-control" asp-for="Address" placeholder="Write the address..." name="Address" />
                        <span asp-validation-for="Address"></span>
                    </div>
                </div>
            </div>
            <div class="form-control flex-fill mb-0 uploadpic">
                <label class="form-label" asp-for="Image" >Upload Image</label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image"></span>
            </div><br><br>

    
            
            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-block mb-4">Post Case</button>
        </form>
    </div>    
</div>
